<%- include ('../partials/nav') %>

<main>
    <style>
        label {
            display: inline-block;
            width: 50px;
            text-align: right;
        }
    </style>
    <div class="border"
        style="text-align: center; margin-left:auto; margin-right:auto;width:500px; margin-top:150px">
        <h1 style="margin-top:30px">Login</h1>
        <form action="/login" method="POST" style="margin-top:50px">
            <div style="margin-bottom:20px">
                <label for="email">Email: </label>
                <input required type="email" id="email" name="email" />
            </div>
            <div>
                <label for="password">Password: </label>
                <input required type="Password" id="password" name="password" />
            </div>
            <input style="margin-top:30px; margin-bottom: 30px;" type="submit" value="Login" />
            <div style="margin-bottom:30px;">
                <p>Not a user? <a href="/register">Register</a></p>
            </div>
        </form>
    </div>
</main>

